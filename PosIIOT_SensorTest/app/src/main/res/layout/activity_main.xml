<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sjtu.iiot.posiiot_sensortest.MainActivity">

    <TextView
        android:text="This is my phone version"
        android:background="#FF00ffff"
        android:id="@+id/Phone_Version"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动计步器测试功能"
        android:textSize="20dp"
        android:id="@+id/cb_step" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动低功耗蓝牙测试功能"
        android:textSize="20dp"
        android:id="@+id/cb_ble" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动Wi-Fi测试功能"
        android:textSize="20dp"
        android:id="@+id/cb_wifi" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成日志"
        android:id="@+id/LogButton"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/ll_test">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="测试"
                android:background="#FFff0000"
                android:textSize="20dp"
                android:id="@+id/tv_test"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/ll_step">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="计步器"
                android:background="#FF00ff00"
                android:textSize="20dp"
                android:id="@+id/tv_step"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/ll_ble">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#FF0000ff"
                android:text="蓝牙"
                android:textSize="20dp"
                android:id="@+id/tv_ble"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/ll_wifi">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Wi-Fi"
                android:background="#FFff00ff"
                android:textSize="20dp"
                android:id="@+id/tv_wifi"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fl_content">
    </LinearLayout>

</LinearLayout>
