<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA9999ff" >

    <Button
        android:id="@+id/TimeButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:text="9:00-10:00 Opening Ceremony of International Symposium on Parity Nonconservation and Neutrino Physics &amp; Tsung-Dao LEE Science and Art Exhibition"
        android:textSize="12dp"
        android:background="@drawable/buttonstyle"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/TimeButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:paddingRight="0dp"
        android:text="10:00-11:00 Tsung-Dao LEE Science and Art Lecture"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_below="@+id/TimeButton2"
        android:layout_alignStart="@+id/TimeButton2" />

    <Button
        android:id="@+id/TimeButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:paddingRight="0dp"
        android:textSize="12dp"
        android:text="10:00-12:00 International Symposium on Parity Nonconservation and Neutrino Physics"
        android:layout_below="@+id/TimeButton3"
        android:layout_alignStart="@+id/TimeButton3" />

    <Button
        android:id="@+id/TimeButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:background="@drawable/buttonstyle"
        android:textSize="12dp"
        android:text="14:00-14:45 Inauguration of the Tsung-Dao Lee Institute"
        android:gravity="center"
        android:layout_below="@+id/TimeButton4"
        android:layout_alignStart="@+id/TimeButton4" />

    <Button
        android:id="@+id/TimeButton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:background="@drawable/buttonstyle"
        android:textSize="12dp"
        android:text="15:00-19:00 A Pure Love of the Local Feelings - Celebration of 90th Birthday of Pro. Tsung-Dao LEE"
        android:layout_below="@+id/TimeButton5"
        android:layout_alignStart="@+id/TimeButton5" />

</RelativeLayout> 